<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/tab_main"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".controller.MainActivity">
    <TextView
            android:text="@string/lbl_lat_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_lat_lon"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_latitude"
            android:hint="@string/txt_latitude"
            android:autofillHints=""
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toStartOf="@+id/btn_gps"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_longitude"
            android:hint="@string/txt_longitude" android:autofillHints=""
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/txt_latitude"/>
    <ImageButton
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:id="@+id/btn_gps"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintVertical_bias="1.0" android:contentDescription="@string/btn_gps"/>
    <View
            android:id="@+id/divider"
            android:layout_width="379dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/lbl_photos_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_photos_signal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/divider">


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/tbLayaut_main">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:baselineAligned="false"
                    android:id="@+id/linear_horizontal_one">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:id="@+id/linear_vertical_one">
                    <ImageButton
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
                            android:id="@+id/ibtn_front" android:layout_weight="1"/>
                    <CheckBox
                            android:text="@string/photo_front"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/cb_front" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:id="@+id/linear_vertical_two">
                    <CheckBox
                            android:text="@string/photo_back"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content" android:id="@+id/cb_back" android:layout_weight="1"/>
                    <ImageButton
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
                            android:id="@+id/ibtn_back" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content" android:layout_weight="1"
                        android:id="@+id/linear_vertical_three">
                    <ImageButton
                            android:layout_width="130dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
                            android:id="@+id/ibtn_plaque" android:layout_weight="1"/>
                    <CheckBox
                            android:text="@string/photo_plaque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/cb_plaque" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <View
            android:id="@+id/divider2"
            android:layout_width="379dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="348dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/lbl_clasification_signal"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/lbl_clasification_signal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="34dp" android:layout_weight="1" android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/divider2"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.104">
        <RadioButton
                android:text="@string/btn_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/btn_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton"
                android:layout_weight="1"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>