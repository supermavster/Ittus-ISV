<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GeolocalizationActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/linear_vertical_one" android:gravity="center|center_horizontal|center_vertical"
            android:layout_margin="5dp" tools:layout_editor_absoluteX="143dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
        <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/ibtn_front"
                android:contentDescription="@string/photo_front" android:layout_weight="1"/>
        <CheckBox
                android:text="@string/photo_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cb_front" android:layout_weight="1"
                android:textAlignment="center" android:enabled="false"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/linear_vertical_three"
            android:gravity="center|center_horizontal|center_vertical" android:layout_margin="5dp"
            tools:layout_editor_absoluteY="287dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/ibtn_plaque" android:layout_weight="1"
                android:contentDescription="@string/photo_plaque"/>
        <CheckBox
                android:text="@string/photo_plaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cb_plaque" android:layout_weight="1"
                android:textAlignment="center" android:enabled="false"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/linear_vertical_two"
            android:gravity="center|center_horizontal|center_vertical" android:layout_margin="5dp"
            tools:layout_editor_absoluteX="141dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_geolocalization">
        <CheckBox
                android:text="@string/photo_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cb_back"
                android:textAlignment="center" android:enabled="false"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/ibtn_back" android:layout_weight="1"
                android:contentDescription="@string/photo_back"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/linear_vertical_one" android:gravity="center|center_horizontal|center_vertical"
            android:layout_margin="5dp" tools:layout_editor_absoluteY="287dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2">
        <ImageButton
                android:layout_width="125dp"
                android:layout_height="125dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/ibtn_front"
                android:contentDescription="@string/photo_front" android:layout_weight="1"/>
        <CheckBox
                android:text="@string/photo_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cb_front" android:layout_weight="1"
                android:textAlignment="center" android:enabled="false"
        />
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="116dp" app:srcCompat="@drawable/compass" tools:layout_editor_absoluteY="307dp"
            tools:layout_editor_absoluteX="146dp" android:id="@+id/imageView2"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_geolocalization" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>