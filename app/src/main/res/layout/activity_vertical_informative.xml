<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.vertical.ActivityVerticalInformative">

    <TextView
            android:text="@string/lbl_vts_informative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_vts_informative" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <ImageButton
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtn_vts_informative_turist" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:contentDescription="@string/btn_vts_informative_turist"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btn_vts_informative_services"
            app:layout_constraintVertical_bias="0.32"/>
    <Button
            android:text="@string/btn_vts_informative_turist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vts_informative_turist"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_vts_informative_turist"
            app:layout_constraintStart_toStartOf="@+id/ibtn_vts_informative_turist"
            app:layout_constraintEnd_toEndOf="@+id/ibtn_vts_informative_turist"/>
    <Button
            android:text="@string/btn_vts_informative_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vts_informative_location"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_vts_informative_location"
            app:layout_constraintStart_toStartOf="@+id/ibtn_vts_informative_location"
            app:layout_constraintEnd_toEndOf="@+id/ibtn_vts_informative_location"/>
    <ImageButton
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtn_vts_informative_location"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/lbl_vts_informative"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:contentDescription="@string/btn_vts_informative_location"/>
    <ImageButton
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtn_vts_informative_services"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:contentDescription="@string/btn_vts_informative_services"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_vts_informative_location"/>
    <Button
            android:text="@string/btn_vts_informative_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_vts_informative_services"
            app:layout_constraintTop_toBottomOf="@+id/ibtn_vts_informative_services"
            app:layout_constraintStart_toStartOf="@+id/ibtn_vts_informative_services"
            app:layout_constraintEnd_toEndOf="@+id/ibtn_vts_informative_services"/>
</android.support.constraint.ConstraintLayout>